{
    "name": "sleeping-owl/apist",
    "description": "Package to provide api-like access to foreign sites based on html parsing",
    "homepage": "http://sleeping-owl-apist.gopagoda.com",
    "license": "MIT",
    "keywords": ["api", "crawler"],
    "authors": [
        {
            "name": "Sleeping Owl",
            "email": "owl.sleeping@yahoo.com"
        },
        {
            "name": "Yevgen Grytsay",
            "email": "yevgen_grytsay@mail.ru"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "guzzlehttp/guzzle": "~6.0",
        "symfony/css-selector": "~3.0",
        "symfony/dom-crawler": "~3.0",
        "symfony/yaml": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "mockery/mockery": "0.*",
        "pdepend/pdepend" : "~2.1",
        "halleck45/phpmetrics": "~1.1"
    },
    "autoload": {
        "classmap": ["tests/"],
        "psr-0": {
            "SleepingOwl\\Apist": "src/"
        }
    },
    "minimum-stability": "stable"
}
